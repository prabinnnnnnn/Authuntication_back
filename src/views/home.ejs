<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/todolist.css" />
    <title>Users List</title>
  </head>
  <body>
    <nav>
      <a href="/auth/logout" class="logoutBtn">Logout</a>
      <div>
        <p><%=username%></p>
      </div>
    </nav>

    <div class="todo-Container">
      <h1>Todo List</h1>
      <% if (todoList && todoList.length > 0) { %> <% todoList.forEach(todo => {
      %>
      <div class="todoListcontainer">
        <h4 class="title"><%= todo.title %></h4>
        <p class="task"><%= todo.task %></p>
        <p class="time"><%= todo.createdAt %></p>
        <a href="/delete/<%= todo._id %>" class="deleteBtn">Delete</a>
      </div>
      <% }); %> <% } else { %>
      <p class="subtitle">No Tasks found</p>
      <% } %>
    </div>

    <div class="container">
      <h1>Create Todo-list</h1>
      <p class="subtitle">Enter your email below to login your account</p>
      <form action="/" method="post">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="title" id="email" placeholder="Title" name="title" />
        </div>

        <div class="form-group">
          <label for="task">Task</label>
          <input type="text" id="task" name="task" placeholder="Task" />
        </div>

        <button type="submit">Create</button>
      </form>
    </div>
  </body>
</html>
